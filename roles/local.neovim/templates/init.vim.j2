let g:go_fmt_command = "gopls"
"let g:go_list_type = "quickfix"

" hashivim/vim-hashicorp-tools
let g:terraform_fmt_on_save = 1

" junegunn/vim-easy-align
xmap ga <Plug>(EasyAlign)
nmap ga <Plug>(EasyAlign)

" junegunn/fzf
nnoremap <c-p> :FZF<cr>

