nnoremap <localleader>b :Buffers<cr>
let g:fzf_action = {
\ 'ctrl-s': 'split',
\ 'ctrl-v': 'vsplit'
\ }

" jremmen/vim-ripgrep 
nnoremap <localleader>* :Rg<cr>

" morhetz/gruvbox
let g:gruvbox_italic=1
set background=dark
colorscheme gruvbox
